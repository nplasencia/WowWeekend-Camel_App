<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.auret.appwowweekend"
    android:versionCode="6"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppWowWeekendTheme" >
        <activity
            android:name=".LogoActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Preferences"
            android:label="Ajustes"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.auret.appwowweekend.LogoActivity" />
        </activity>
        
        <activity
            android:name=".MarcaActivity"
            android:label="@string/marca_content"
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name=".ExperienciaActivity"
            android:label="@string/experiencia_content"
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name=".QrActivity"
            android:label="@string/qr_content"
            android:theme="@style/AppWowWeekendTheme"
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name=".ResultActivity"
            android:label="@string/result_content"
            android:screenOrientation="landscape">
        </activity>
        
    </application>

</manifest>
